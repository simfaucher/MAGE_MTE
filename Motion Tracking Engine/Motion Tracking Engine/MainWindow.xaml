<Window x:Class="Motion_Tracking_Engine.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Motion_Tracking_Engine"
        mc:Ignorable="d"
        Title="MainWindow" Height="799.5" Width="999.5">
    <Grid>
        <Button Content="Set reference" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
        <Image x:Name="Image" HorizontalAlignment="Left" Height="677" Margin="10,82,0,0" VerticalAlignment="Top" Width="972"/>
        <CheckBox Content="Real time" HorizontalAlignment="Left" Margin="10,35,0,0" VerticalAlignment="Top" Width="75" Checked="CheckBox_Checked" Unchecked="CheckBox_Unchecked" IsChecked="True"/>
        <Button x:Name="getImageButton" Content="Get image" HorizontalAlignment="Left" Margin="10,55,0,0" VerticalAlignment="Top" Width="76" Click="GetImageButton_Click"/>

    </Grid>
</Window>
